{
  "name": "jots-ai",
  "version": "0.1.0",
  "description": "Hierarchical task management for AI coding agents and humans",
  "type": "module",
  "bin": {
    "jots": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "task",
    "todo",
    "epic",
    "project-management",
    "ai",
    "claude",
    "agent"
  ],
  "author": "Kevin Crabbe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevincrabbe/jots.git"
  },
  "bugs": {
    "url": "https://github.com/kevincrabbe/jots/issues"
  },
  "homepage": "https://github.com/kevincrabbe/jots#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8"
  }
}
